<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Customize your theme here. -->

        <item name="colorOnSecondary">#009688</item>
        <item name="colorSecondaryVariant">@color/black</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="Theme.DiaryNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/main_dark</item>
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Customize your theme here. -->

        <item name="colorOnSecondary">#009688</item>
        <item name="colorSecondaryVariant">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="Theme.Diary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Diary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Diary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>